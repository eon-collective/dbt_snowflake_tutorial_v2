[sqlfluff]
templater = jinja
sql_file_exts = .sql,.sql.j2,.dml,.ddl

[sqlfluff:rules]
rules = L001, L002, L003, L004, L005, L006, L008, L009, L010, L011, L012, L013, L014, L015, L017, L018, L019, L020, L022, L023, L025, L026, L027, L028, L030, L035, L036, L038, L039, L040, L041, L043, L045, L046, L047, L048, L049, L050, L053, L054, L058, L059, L060, L061, L063, L064, L065

[sqlfluff:rules:L002]
tab_space_size = 4

[sqlfluff:rules:L004]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules:L010]
capitalisation_policy = upper

[sqlfluff:rules:L011]
aliasing = explicit

[sqlfluff:rules:L012]
aliasing = explicit

[sqlfluff:rules:L013]
allow_scalar = true

[sqlfluff:rules:L014]
extended_capitalisation_policy = lower
unquoted_identifiers_policy = all

[sqlfluff:rules:L019]
comma_style = trailing

[sqlfluff:rules:L026]
force_enable = true

[sqlfluff:rules:L028]
single_tab_references = unqualified

[sqlfluff:rules:L030]
extended_capitalisation_policy = upper

[sqlfluff:rules:L036]
wildcard_policy = single

[sqlfluff:rules:L038]
select_clause_trailing_comma = forbid

[sqlfluff:rules:L040]
capitalisation_policy = upper

[sqlfluff:rules:L054]
group_by_and_order_by_style = explicit

[sqlfluff:rules:L063]
extended_capitalisation_policy = upper

[sqlfluff:rules:L064]
force_enable = true
preferred_quoted_literal_style = double_quotes